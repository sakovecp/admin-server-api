AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

#path до проекта
PROJECT_PATH=/Users/petro/Documents/projects/admin-server-api
#назва проекта для docker compose
COMPOSE_PROJECT_NAME=admin-server-api
# local або docker
SERVER_API_MODE=local
# nginx або інший сервер (зараз добавлена підтримка лише для nginx)
SERVER_TYPE=nginx
