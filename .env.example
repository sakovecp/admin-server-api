SERVER_CONF_DIR=/var/www/html/docker/conf/nginx/conf.d
#SERVER_HTML_DIR=/var/www
SERVER_HTML_DIR=/var/www/html/docker/conf/nginx/html
SERVER_BINARY=/usr/sbin/nginx
SERVER_DOCKER_CONTAINER=nginx
#Див. resouces/views/servers/nginx
TEMPLATE_VHOST_CONF=servers.nginx.vhost_conf
TEMPLATE_VHOST_INDEX=servers.nginx.vhost_index
